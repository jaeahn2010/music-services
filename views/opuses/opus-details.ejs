<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: `${opus.title} | GLVMS`}) %>
    <link rel="stylesheet" href="/styles/opus-details.css">
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <section class="details-left">
        <p><%= opus.title %></p>
        <p><%= opus.composer %></p>
        <p><%= opus.instrumentation %></p>
        <p>$<%= opus.price %></p>
        <p>
        <% for (movement of opus.movements) { %>
            <span>
                <%= movement.movementTitle %>
            </span>
            <span>
                $<%= movement.price %>
            </span>
        <% } %>
        </p>
    </section>
    <section class="details-middle">
        <h3>Description</h3>
        <% if (opus.description === undefined) { %>
            <p>None provided</p>
        <% } else  { %>
            <p><%= opus.description %></p>
        <% } %>
    </section>
    <section class="details-right">
        <a href="/opuses"><button class='btn'>Go back to full repertoire list</button></a>
    </section>
    <button><a href="/opuses/<%= opus._id %>/edit">Edit this Repertoire</a></button>
    <form method="POST" action="/opuses/<%= opus._id %>?_method=DELETE">
        <input type="submit" value="Delete this Repertoire"/>
    </form>
</body>

</html>
