    <script>
        const prevBtn = document.getElementById('prev-btn');
        const nextBtn = document.getElementById('next-btn');
        let photo = document.getElementsByClassName('photo');

        prevBtn.addEventListener('click', scroll);
        nextBtn.addEventListener('click', scroll);

        let photoIdx = 1;
        showPhotos(photoIdx);

        //enable arrows
        function scroll(evt) {
            let direction = 0;
            if (evt.target.id === 'prev-btn') {
                direction = -1;
            } else if (evt.target.id === 'next-btn') {
                direction = 1;
            }
            photoIdx += direction;
            showPhotos(photoIdx);
        }

        function showPhotos(index) {
            //allow last photo -> first photo
            if (index > photo.length) {
                photoIdx = 1;
            }
            //allow first photo -> last photo
            if (index < 1) {
                photoIdx = photo.length;
            }
            //default no display
            for (let i = 0; i < photo.length; i++) {
                photo[i].style.display = "none";
            }
            //display current photo
            photo[photoIdx - 1].style.display = "block";
        }
    </script>
